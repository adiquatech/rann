<h1><%= title %></h1>
<div class="login-container">
  <% if (error) { %>
    <p class="error-text"><%= error %></p>
  <% } %>

  <form action="/auth/register" method="post">
    <!-- your fields -->
    <button type="submit" class="login-button">Register</button>
  </form>

  <p class="register-link"><a href="/auth/login">Back to Login</a></p>
</div>