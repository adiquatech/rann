<h1><%= title %></h1>
<div class="login-container">
    <form action="/auth/register" method="post" class="login-form">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required placeholder="Choose a username">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required placeholder="Enter your email" autocomplete="email">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required placeholder="Create a password" minlength="6">
        </div>
        <button type="submit" class="login-button">Create Account</button>
    </form>
    <p class="register-link">Already have an account? <a href="/auth/login">Login</a></p>
</div>