<section class="auth-page">
  <div class="auth-container">
    <h1><%= title %></h1>

    <% if (error) { %>
      <p class="error-text"><%= error %></p>
    <% } %>
    <% if (success) { %>
      <p class="success-text"><%= success %></p>
    <% } %>

    <form action="/auth/login" method="post">
      <div class="form-group">
        <label for="account_email">Username or Email</label>
        <input type="text" id="account_email" name="account_email" required placeholder="Enter username or email">
      </div>

      <div class="form-group password-group">
        <label for="account_password">Password</label>
        <div class="password-wrapper">
          <input type="password" id="account_password" name="account_password" required placeholder="Enter your password">
          <span class="toggle-password" onclick="togglePassword(this)">ğŸ‘ï¸</span>
        </div>
      </div>

      <button type="submit" class="btn-primary">Login</button>
    </form>

    <div class="auth-links">
      <p>No account? <a href="/auth/register">Register</a></p>
      <p><a href="/auth/forgot-password">Forgot Password?</a></p>
    </div>
  </div>
</section>