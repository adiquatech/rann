<h1><%= title %></h1>
<div class="login-container">
  <% if (error) { %>
    <p class="error-text"><%= error %></p>
  <% } %>
  <% if (success) { %>
    <p class="success-text"><%= success %></p>
  <% } %>

  <form action="/auth/login" method="post" class="login-form">
    <div class="form-group">
      <label for="login-input">Username or Email:</label>
      <input type="text" id="login-input" name="account_email" required placeholder="Enter username or email">
    </div>
    <div class="form-group password-group">
      <label for="password">Password:</label>
      <div class="password-wrapper">
        <input type="password" id="password" name="account_password" required placeholder="Enter your password">
        <span class="toggle-password" onclick="togglePassword(this)">ğŸ‘ï¸</span>
      </div>
    </div>
    <button type="submit" class="login-button">Login</button>
  </form>

  <p class="register-link">No account? <a href="/auth/register">Register</a></p>
  <p class="register-link">Forgot Password? <a href="/auth/forgot-password">Reset it here</a></p>
</div>