<section class="public-send-page">
  <div class="public-send-wrapper">
    <header class="page-header">
      <h1>Send Anonymous Message</h1>
      <p class="subtitle">To <strong>@<%= receiver.username %></strong></p>
    </header>

    <div class="public-send-container">
      <p class="info">
        Your message will be sent <strong>completely anonymously</strong> — no name, no email, no trace.
      </p>

      <form action="/to/<%= receiver.username %>" method="post">
        <div class="textarea-group">
          <textarea 
            name="text" 
            rows="10" 
            placeholder="Be kind. Be honest. Say what you mean..." 
            required
            autofocus
          ></textarea>
          <button type="submit" class="send-btn-icon" aria-label="Send message">
            <span class="arrow">➤</span>
          </button>
        </div>
      </form>

      <p class="back-link">
        <a href="/">← Back to Home</a>
      </p>
    </div>
  </div>
</section>