<section class="public-send-page">
  <div class="container">
    <h1>Send Anonymous Message</h1>
    <p class="subtitle">To <strong>@<%= receiver.username %></strong></p>

    <div class="public-send-container">
      <p class="info">Your message will be sent completely anonymously — no name, no trace.</p>

      <form action="/to/<%= receiver.username %>" method="post">
        <div class="form-group">
          <textarea 
            name="text" 
            rows="8" 
            placeholder="Write your anonymous message here..." 
            required
          ></textarea>
        </div>

        <button type="submit" class="btn-primary send-btn">Send Anonymously</button>
      </form>

      <p class="back-link">
        <a href="/">← Back to Home</a>
      </p>
    </div>
  </div>
</section>