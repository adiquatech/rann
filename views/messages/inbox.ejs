<div class="inbox-container">
  <h1>Your Inbox</h1>

  <% if (conversations.length === 0) { %>
    <p>No messages yet. Share your link!</p>
  <% } else { %>
    <% conversations.forEach(conv => { %>
      <a href="/messages/thread/<%= conv.original._id %>" class="conversation-link">
        <div class="conversation-card">
          <div class="sender-info">
            <strong><%= conv.senderUsername || 'Anonymous' %></strong>
            <small><%= new Date(conv.latest.createdAt).toLocaleString() %></small>
          </div>
          <p class="last-message"><%= conv.latest.text %></p>
          <% if (conv.unreadCount > 0) { %>
            <span class="unread-badge"><%= conv.unreadCount %></span>
          <% } %>
        </div>
      </a>
    <% }) %>
  <% } %>

  <div class="public-link">
    <p>Your public link:</p>
    <code><%= publicLink %></code>
    <button onclick="copyLink()" class="copy-btn">Copy</button>
  </div>
</div>