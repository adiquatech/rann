<div class="inbox-container">
  <h1>Your Inbox</h1>

  <% if (messages.length === 0) { %>
  <p>No messages yet. Share your link!</p>
<% } else { %>
  <% messages.forEach(msg => { %>
    <a href="/messages/thread/<%= msg._id %>" class="message-link">
      <div class="message-card">
        <div class="sender-info">
          <strong>Anonymous</strong>
          <small><%= new Date(msg.createdAt).toLocaleString() %></small>
        </div>
        <p><%= msg.text %></p>
      </div>
    </a>
  <% }) %>
<% } %>

  <div class="public-link-section">
    <p><strong>Your secret link:</strong></p>
    <div class="link-box">
      <code id="publicLink"><%= publicLink %></code>
      <button onclick="copyLink()" class="copy-btn">Copy</button>
    </div>
    <p class="share-hint">Share this link with anyone â€” they can send you messages without knowing who you are.</p>
  </div>

</div>