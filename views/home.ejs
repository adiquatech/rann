<div class="home-content">
  <% if (loggedIn) { %>
    <h1>Welcome back, <%= user.username %>!</h1>
    <p>Send and receive anonymous messages.</p>
    <div class="home-buttons">
      <a href="/messages/send" class="btn-primary">Send Message</a>
      <a href="/messages/inbox" class="btn-primary">View Inbox</a>
      <a href="/messages/outbox" class="btn-primary">View Outbox</a>
      <a href="/messages/user/profile" class="btn-primary">My Profile</a>
    </div>
  <% } else { %>
    <h1>RANN</h1>
    <p>Send anonymous messages. No names. No judgment.</p>
    <div class="home-buttons">
      <a href="/auth/login" class="btn-primary">Login</a>
      <a href="/auth/register" class="btn-success">Register</a>
    </div>
  <% } %>
</div>